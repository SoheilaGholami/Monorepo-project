{
  "compileOnSave": false,
  "compilerOptions": {
    "noImplicitAny": true,
    "strict": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
     
    
      "@/CAPI-Admin/*": ["apps/CAPI-Admin/src/*"],
      "@/CAPI-Operator/*": ["apps/CAPI-Operator/src/*"],
      "@/CAPI-Admin-e2e/*": ["apps/CAPI-Admin-e2e/src/*"],
      "@/CAPI-Operator-e2e/*": ["apps/CAPI-Operator-e2e/src/*"],
     
    }
  },
  "exclude": ["node_modules", "tmp"]
}
